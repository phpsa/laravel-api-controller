{
  "name": "phpsa/laravel-api-controller",
  "description": "A laravel api base controller with basic CRUD mapped to the model ",
  "license": "MIT",
  "keywords": [
    "laravel",
    "api",
    "controller"
  ],
  "type": "library",
  "authors": [
    {
      "name": "Craig G Smith",
      "email": "vxdhost@gmail.com"
    }
  ],
  "require": {
    "php": "^7.3|^8.0",
    "laravel/framework": "^6.0|^7.30.3|^8.0"
  },
  "require-dev": {
    "doctrine/dbal": "~2.3",
    "laravel/legacy-factories": "^1.0.4",
    "mockery/mockery": "^1.0",
    "orchestra/testbench": "^4.0|^5.0|^6.0",
    "phpunit/phpunit": "^8.0|^9.0"
  },
  "autoload": {
    "psr-4": {
      "Phpsa\\LaravelApiController\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Phpsa\\LaravelApiController\\Tests\\": "tests"
    },
    "files": [
      "vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"
    ]
  },
  "scripts": {
    "phpunit": "phpunit",
    "test": "phpunit"
  },
  "extra": {
    "laravel": {
      "providers": [
        "Phpsa\\LaravelApiController\\ServiceProvider"
      ]
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
